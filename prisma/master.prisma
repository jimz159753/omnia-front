generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/master-client"
  binaryTargets = ["native", "linux-musl", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("MASTER_DATABASE_URL")
}

model Account {
  id        String   @id @default(cuid())
  googleId  String?  @unique  // Google user ID - links to owner's Google account
  email     String?           // Owner's Google email
  ownerName String   @default("") // Owner's display name from Google
  slug      String   @unique
  name      String
  dbName    String
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
