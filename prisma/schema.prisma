generator client {
  provider      = "prisma-client-js"
  output        = "../src/generated/prisma"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String   @default("")
  email     String   @unique
  password  String
  avatar    String?
  role      String   @default("user") // admin, user
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tickets   Ticket[]
}

model Ticket {
  id        String       @id @default(uuid())
  clientId  String
  client    Client       @relation(fields: [clientId], references: [id])
  sellerId  String
  seller    User         @relation(fields: [sellerId], references: [id])
  total     Float        @default(0)
  quantity  Int          @default(1)
  status    String
  notes     String       @default("")
  items     TicketItem[]
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
}

model Client {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  phone     String
  instagram String?  @unique
  address   String   @default("")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tickets   Ticket[]
}

model Category {
  id          String       @id @default(uuid())
  name        String
  description String
  products    Product[]    @relation("ProductCategory")
  subCategory SubCategory? @relation("CategorySubCategory")
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  services    Service[]    @relation("ServiceCategory")
}

model SubCategory {
  id          String    @id @default(uuid())
  name        String
  description String
  categoryId  String    @unique
  category    Category  @relation("CategorySubCategory", fields: [categoryId], references: [id])
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  services    Service[] @relation("ServiceSubCategory")
  products    Product[] @relation("ProductSubCategory")
}

model Provider {
  id          String    @id @default(uuid())
  name        String
  ownerName   String    @default("")
  description String    @default("")
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  products    Product[]
}

model Product {
  id            String       @id @default(uuid())
  image         String
  sku           String
  name          String
  description   String
  price         Float
  categoryId    String?
  category      Category?    @relation("ProductCategory", fields: [categoryId], references: [id])
  subCategoryId String?
  subCategory   SubCategory? @relation("ProductSubCategory", fields: [subCategoryId], references: [id])
  stock         Int
  cost          Float
  providerId    String
  provider      Provider     @relation(fields: [providerId], references: [id])
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  ticketItems   TicketItem[]
}

model Service {
  id            String       @id @default(uuid())
  image         String
  name          String
  categoryId    String?
  category      Category?    @relation("ServiceCategory", fields: [categoryId], references: [id])
  subCategoryId String?
  subCategory   SubCategory? @relation("ServiceSubCategory", fields: [subCategoryId], references: [id])
  duration      Int
  description   String
  price         Float
  commission    Float
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  ticketItems   TicketItem[]
}

model TicketItem {
  id        String   @id @default(uuid())
  ticketId  String
  ticket    Ticket   @relation(fields: [ticketId], references: [id])
  productId String?
  product   Product? @relation(fields: [productId], references: [id])
  serviceId String?
  service   Service? @relation(fields: [serviceId], references: [id])
  quantity  Int      @default(1)
  unitPrice Float    @default(0)
  total     Float    @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Business {
  id                String   @id @default(cuid())
  name              String   @default("")
  category          String   @default("")
  website           String   @default("")
  rfc               String   @default("")
  address           String   @default("")
  country           String   @default("")
  phone             String   @default("")
  description       String   @default("")
  facebook          String   @default("")
  twitter           String   @default("")
  instagram         String   @default("")
  parking           Boolean  @default(false)
  acceptCards       Boolean  @default(false)
  acceptCash        Boolean  @default(false)
  petFriendly       Boolean  @default(false)
  freeWifi          Boolean  @default(false)
  logo              String?
  whatsappReminders Boolean  @default(false)
  whatsappCredits   Boolean  @default(false)
  whatsappChatBot   Boolean  @default(false)
  language          String   @default("en")
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model Schedule {
  id        String   @id @default(uuid())
  dayOfWeek String
  isOpen    Boolean  @default(false)
  startTime String?
  endTime   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([dayOfWeek])
}

model RestTime {
  id        String   @id @default(uuid())
  dayOfWeek String
  startTime String
  endTime   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
