generator client {
  provider      = "prisma-client-js"
  output        = "../src/generated/prisma"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String   @default("")
  email     String   @unique
  password  String
  avatar    String?
  role      String   @default("user") // admin, user
  position  String   @default("")
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tickets   Ticket[]
}

model Ticket {
  id                    String          @id @default(uuid())
  clientId              String
  client                Client          @relation(fields: [clientId], references: [id])
  staffId               String          @map("sellerId")
  staff                 User            @relation(fields: [staffId], references: [id])
  total                 Float           @default(0)
  quantity              Int             @default(1)
  status                String
  notes                 String          @default("")
  discount              Float           @default(0) // Discount percentage (0-100)
  startTime             DateTime?
  endTime               DateTime?
  duration              Int?            @map("duration") // Duration in minutes
  googleCalendarEventId String? // Google Calendar event ID for sync
  googleCalendarId      String? // Which Google Calendar to save to (calendarId from GoogleCalendar table)
  products              TicketProduct[]
  services              TicketService[]
  createdAt             DateTime        @default(now())
  updatedAt             DateTime        @updatedAt
}

model Client {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  phone     String
  instagram String?  @unique
  address   String   @default("")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tickets   Ticket[]
}

model Category {
  id            String        @id @default(uuid())
  name          String
  description   String
  products      Product[]     @relation("ProductCategory")
  subCategories SubCategory[] @relation("CategorySubCategory")
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  services      Service[]     @relation("ServiceCategory")
}

model SubCategory {
  id          String    @id @default(uuid())
  name        String
  description String
  categoryId  String
  category    Category  @relation("CategorySubCategory", fields: [categoryId], references: [id])
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  services    Service[] @relation("ServiceSubCategory")
  products    Product[] @relation("ProductSubCategory")
}

model Provider {
  id          String    @id @default(uuid())
  name        String
  ownerName   String    @default("")
  description String    @default("")
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  products    Product[]
}

model Product {
  id            String          @id @default(uuid())
  image         String
  sku           String
  name          String
  description   String
  price         Float
  categoryId    String?
  category      Category?       @relation("ProductCategory", fields: [categoryId], references: [id])
  subCategoryId String?
  subCategory   SubCategory?    @relation("ProductSubCategory", fields: [subCategoryId], references: [id])
  stock         Int
  cost          Float
  providerId    String
  provider      Provider        @relation(fields: [providerId], references: [id])
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  tickets       TicketProduct[]
}

model Service {
  id            String          @id @default(uuid())
  image         String
  name          String
  categoryId    String?
  category      Category?       @relation("ServiceCategory", fields: [categoryId], references: [id])
  subCategoryId String?
  subCategory   SubCategory?    @relation("ServiceSubCategory", fields: [subCategoryId], references: [id])
  duration      Int
  description   String
  price         Float
  commission    Float
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  tickets       TicketService[]
}

model TicketProduct {
  id        String   @id @default(uuid())
  ticketId  String
  ticket    Ticket   @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  productId String
  product   Product  @relation(fields: [productId], references: [id])
  quantity  Int      @default(1)
  unitPrice Float    @default(0)
  discount  Float    @default(0) // Discount percentage (0-100)
  total     Float    @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([ticketId])
  @@index([productId])
}

model TicketService {
  id        String   @id @default(uuid())
  ticketId  String
  ticket    Ticket   @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  serviceId String
  service   Service  @relation(fields: [serviceId], references: [id])
  quantity  Int      @default(1)
  unitPrice Float    @default(0)
  discount  Float    @default(0) // Discount percentage (0-100)
  total     Float    @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([ticketId])
  @@index([serviceId])
}

model Business {
  id                String   @id @default(cuid())
  name              String   @default("")
  category          String   @default("")
  website           String   @default("")
  rfc               String   @default("")
  address           String   @default("")
  country           String   @default("")
  phone             String   @default("")
  description       String   @default("")
  facebook          String   @default("")
  twitter           String   @default("")
  instagram         String   @default("")
  parking           Boolean  @default(false)
  acceptCards       Boolean  @default(false)
  acceptCash        Boolean  @default(false)
  petFriendly       Boolean  @default(false)
  freeWifi          Boolean  @default(false)
  logo              String?
  whatsappReminders Boolean  @default(false)
  whatsappCredits   Boolean  @default(false)
  whatsappChatBot   Boolean  @default(false)
  language          String   @default("en")
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model Schedule {
  id        String   @id @default(uuid())
  dayOfWeek String
  isOpen    Boolean  @default(false)
  startTime String?
  endTime   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([dayOfWeek])
}

model RestTime {
  id        String   @id @default(uuid())
  dayOfWeek String
  startTime String
  endTime   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model GoogleAccount {
  id           String   @id @default(uuid())
  userId       String   @unique
  email        String
  accessToken  String
  refreshToken String
  expiresAt    DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model GoogleCalendar {
  id              String   @id @default(uuid())
  googleAccountId String
  calendarId      String   @unique
  name            String
  description     String   @default("")
  backgroundColor String   @default("#039BE5")
  isPrimary       Boolean  @default(false)
  isEnabled       Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model CashTransaction {
  id            String   @id @default(uuid())
  type          String // "income" or "expense"
  amount        Float
  description   String
  category      String   @default("general") // e.g., "sales", "tips", "rent", "supplies", "utilities"
  paymentMethod String   @default("cash") // "cash", "card", "transfer"
  reference     String? // Optional reference number or ticket ID
  notes         String?
  userId        String // Who registered this transaction
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model WhatsAppReminder {
  id              String   @id @default(uuid())
  type            String // "appointment", "followup", "birthday", "custom"
  name            String
  isEnabled       Boolean  @default(true)
  timing          Int      @default(24) // Hours before (for appointment) or days after (for followup)
  timingUnit      String   @default("hours") // "hours", "days"
  messageTemplate String   @db.Text
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@unique([type])
}
